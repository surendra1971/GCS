steps:
  - name: 'ubuntu'
    id: Validate and Compare GitHub init JSON files
    entrypoint: bash
    args:
      - -c
      - |
        apt-get update && apt-get install -y jq

        echo "ğŸ” Validating init-A.json..."
        if ! jq empty init-A.json; then
          echo "âŒ init-A.json is invalid JSON"
          exit 1
        fi

        echo "ğŸ” Validating init-B.json..."
        if ! jq empty init-B.json; then
          echo "âŒ init-B.json is invalid JSON"
          exit 1
        fi

        echo "ğŸ” Comparing init-A.json and init-B.json after sorting..."
        if diff <(jq -S . init-A.json) <(jq -S . init-B.json); then
          echo "âœ… Both JSON files are identical!"
        else
          echo "âŒ JSON files are different!"
          exit 1
        fi

options:
  logging: CLOUD_LOGGING_ONLY
